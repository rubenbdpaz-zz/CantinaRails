<h1>Lista de Produtos</h1>

<table class="table table-striped">
	<tr>
		<th>Nome</th>
    <th>Preço</th>
		<th colspan="3"></th>
	</tr>

	<% @products.each do |product| %>
		<tr>
      <td class="col-md-6 col-xs-12"><%= product.name %></td>  
      <td class="col-md-6 col-xs-12">R$ <%= product.price %></td>
      <td class="col-md-2 col-xs-12"><%= link_to 'Exibir', product_path(product) %></td>
      <td class="col-md-2 col-xs-12"><%= link_to 'Editar', edit_product_path(product) %></td>
      <td class="col-md-2 col-xs-12"><%= link_to 'Apagar', product_path(product),
                        method: :delete, data: { confirm: 'Deseja realmente excluir?'} %></td>
    </tr>
    <% end %>
</table>


<br><br>
<%= link_to 'Cadastrar novo produto', new_product_path %>
<br><%= link_to 'Página inicial', root_path %>